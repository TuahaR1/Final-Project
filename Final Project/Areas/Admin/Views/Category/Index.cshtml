
@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>
@model MyApp.Models.CategoryVM

    <div class="container p-4">
        <div class="row p-3">
          
            <div class="col-6">
            <a asp-action="CreateUpdate" class="btn btn-primary" asp-controller="category"><i class="bi bi-plus-square"></i>&nbsp;Create New Category</a>
            </div>
        </div>
    </div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <td>
                Category Name
            </td>
            <td>
                Display Order
            </td>
            <td>
                Actions
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.categories)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td><a asp-controller="Category" asp-action="CreateUpdate" asp-route-id=@item.Id><i class="bi bi-pencil-square"></i></a> | <a asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id><i class="bi bi-trash3"></i></a> </td>
                
            </tr>
        }
    </tbody>
</table>

